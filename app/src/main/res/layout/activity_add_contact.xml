<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#3AAFA9"
    tools:context=".AddContactActivity">

    <TextView
        android:id="@+id/titleAddContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Contact"
        android:textSize="30sp"
        android:textColor= "#17252a"
        android:fontFamily="@font/roboto_condensed_bold"
        android:includeFontPadding="false"
        android:layout_centerHorizontal="true"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/thumbnailIV"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_add_contact"
        android:layout_below="@+id/titleAddContact"
        android:background="#2B7A78"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/firstName"
        android:layout_below="@+id/thumbnailIV"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DEF2F1"
        android:hint="First Name"
        android:textColorHint="#2B7A78"
        android:textColor="#17252A"
        android:padding="10dp"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/lastName"
        android:layout_below="@+id/firstName"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DEF2F1"
        android:hint="Last Name"
        android:textColorHint="#2B7A78"
        android:textColor="#17252A"
        android:padding="10dp"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/phoneMobile"
        android:layout_below="@+id/lastName"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DEF2F1"
        android:hint="Phone (Mobile)"
        android:textColorHint="#2B7A78"
        android:textColor="#17252A"
        android:padding="10dp"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/phoneHome"
        android:layout_below="@+id/phoneMobile"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DEF2F1"
        android:hint="Phone (Home)"
        android:textColorHint="#2B7A78"
        android:textColor="#17252A"
        android:padding="10dp"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/email"
        android:layout_below="@+id/phoneHome"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DEF2F1"
        android:hint="Email"
        android:textColorHint="#2B7A78"
        android:textColor="#17252A"
        android:padding="10dp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/address"
        android:layout_below="@+id/email"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DEF2F1"
        android:hint="Address"
        android:textColorHint="#2B7A78"
        android:textColor="#17252A"
        android:padding="10dp"
        android:inputType="textPostalAddress"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSaveContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_done_add_contact"/>

</RelativeLayout>